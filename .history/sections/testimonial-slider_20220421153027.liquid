<div class="testimonial-slider">   
    <div class="testimonial-card">
        {% for block in section.blocks %}
            <div class="testimonial-icon">
                {% render "icon-quotes"%}
            </div>
            <div class="testimonial-text">
                Lorem, ipsum dolor sit amet consectetur adipisicing elit. Praesentium, et autem possimus repellat voluptatibus velit doloremque!
            </div>
            <div class="testimonial-image">
                <img src="https://randomuser.me/api/portraits/men/3.jpg"/>
            </div>
            <div class="testimonail-name"> John Doe </div>
        {% endfor %}
    </div>    
</div>

{%schema%}

{
    "name": "testimonial slider",
    "settings": [],
    "blocks":[
        {
            "type":"testimonial",
            "name":"testimonial",
            "settings": [
                {
                    "id":"text",
                    "label":"Text",
                    "type":"richtext"
                },
                {
                    "id":"name",
                    "label":"Name",
                    "type":"text"
                },
                {
                    "id":"image",
                    "label":"Image",
                    "type":"image_picker"
                }
            ]
        }
    ],
    "presets": [
        {
            "name":"testimonial slider"
        }
    ]
}

{%endschema%}