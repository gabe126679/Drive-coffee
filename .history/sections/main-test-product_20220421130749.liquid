{%schema%}

{
    "name": "product page content",
    "settings": [
        {
            "id":"tax",
            "label":"tax-notice",
            "type": "text"
        },
        {
            "id":"shipping",
            "label":"shipping-notice",
            "type": "text"
        },
        {
            "id":"show_reviews",
            "label":"show reviews?",
            "type": "checkbox"
        }
    ],
    "blocks":[
        {
            "type":"tax_notice_block",
            "name":"Tax Notice",
            "limit":1,
            "settings":[
                {
                    "id":"tax_notice_text",
                    "label":"enter tax notice",
                    "type": "text"
                }
            ] 
        },
        {
            "type":"tax_notice_block",
            "name":"Tax Notice",
            "limit":1,
        }
    ]
}

{%endschema%}
